<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Board â€” Pinterest Clone</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="bg-gray-100 font-sans">

  <div class="md:grid md:grid-cols-[80px_1fr] min-h-screen">

    <!-- Sidebar -->
    <aside class="fixed md:static bottom-0 left-0 z-10 w-full md:w-20 h-16  md:h-full bg-white border-t-2 md:border-t-0 md:border-r-2 border-gray-200 flex md:flex-col flex-row justify-between items-center md:items-stretch p-2 gap-4 md:gap-20">
      <div class="flex md:flex-col flex-row gap-4 items-center justify-evenly md:h-2/3 w-full  ">
        <a href="/pinterest/home">
          <div class="w-10 h-10 overflow-hidden">
            <img src="/images/pinterestlogo.jpg" alt="Pinterest Logo" class="p-1 w-full h-full object-cover rounded" />
          </div>
        </a>
        <a href="/pinterest/home" class=  "text-black hover:text-gray-600"><i class="fa-solid fa-house text-xl" title="Home"></i></a>
        <a href="/pinterest/profile" class= "text-black hover:text-gray-600"><i class="fa-solid fa-user text-xl" title="profile"></i></a>
        <a href="/pinterest/pin/saved" class="text-black hover:text-gray-600"><i class="fa-solid fa-bookmark text-xl" title="Saved"></i> </a>
        <a href="/pinterest/pin" class=  "text-black hover:text-gray-600"><i class="fa-solid fa-circle-plus text-xl" title="Create"></i></a>
         </div>
      <div class="hidden md:flex items-center justify-center md:mb-4 ">
  <!-- Settings Icon Button -->
  <button id="settingsBtn" class="p-2 hover:bg-gray-100 rounded-full focus:outline-none">
    <i class="fas fa-cog text-xl"></i>
  </button>

  <!-- Dropdown Menu (Initially Hidden) -->
  <div id="settingsMenu" class="hidden absolute right-0 mt-2 w-40 bg-white border rounded-lg shadow-lg z-50 ">
   <a href="/pinterest/profile" class="block px-4 py-2 hover:bg-gray-100">Profile</a>
    <form action="/pinterest/logout" method="POST">
      <button type="submit" class="w-full text-left px-4 py-2 hover:bg-gray-100">Logout</button>
    </form>
</div>

      </div>
    </aside>

    <!-- Main content -->
    <main class="flex flex-col min-h-screen w-full overflow-hidden">

      <!-- Top Bar -->
      <section class="sticky top-0 bg-white border-b border-gray-300 p-4 z-10">
        <div class="flex items-center">
          <div class="bg-gray-200 h-10 w-10 flex items-center justify-center rounded-l-xl">
            <i class="fa-solid fa-magnifying-glass text-gray-700"></i>
          </div>
          <input type="text" placeholder="Search Your Boards" class="h-10 w-full bg-gray-200 px-3 text-sm rounded-r-xl outline-none text-gray-700" />
        </div>
      </section>

      <!-- Page Header -->
      <section class="bg-white border-b border-gray-300 px-6 py-4 font-bold text-xl md:text-2xl">
          <h2 class="text-2xl font-bold mb-4">BOARD : <%= board.name.toUpperCase() %></h2>
      </section>

      <!-- Form -->
      
<section class="p-4 md:p-6 overflow-y-auto flex-grow bg-white">
 
<% if (board.pins.length === 0) { %>
  <p class="text-gray-500">No pins added yet.</p>
<% } else { %>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-6 gap-4">
    <% board.pins.forEach(pin => { %>
      <a href="/pinterest/pin/details/<%=pin._id%>" class="block">
        <div class="rounded-lg shadow bg-white overflow-hidden hover:shadow-lg transition">
          <div class="p-2">
            <img src="<%= pin.image.url %>" alt="Pin image" class="w-full h-48 object-cover rounded-md mb-2">
            <p class="text-lg font-semibold text-gray-800"><%= pin.title %></p>
          </div>
        </div>
      </a>
    <% }) %>
  </div>
<% } %>

      
    </main>
  </div>
<script src="/scripts.js/home.js"></script>
</body>
</html>
