 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Responsive Pinterest Clone</title>
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
 
 <link rel="stylesheet" href="/css/style.css">
  
</head>
<body class="m-0 p-0 box-border">

  <div class="grid md:grid-cols-[80px_1fr] grid-cols-1 h-screen">

    <!-- Sidebar -->
    <aside class="md:static fixed bottom-0 left-0 z-10 md:h-full md:w-20 w-full flex md:flex-col flex-row justify-between md:justify-between bg-white border-r md:border-r-2 border-t-2 md:border-t-0 border-gray-300 p-2 md:p-1 gap-4 md:gap-20">

      <!-- Top Icons -->
      <div class="flex md:flex-col flex-row gap-6 text-xl items-center justify-evenly md:h-2/3 w-full">
        <a href="/dashboard">
          <div class="w-10 h-10 sm:w-12 sm:h-12 overflow-hidden">
            <img src="/images/pinterestlogo.jpg" alt="Pinterest Logo" class="w-full h-full object-cover p-2 rounded" />
          </div>
        </a>
        <a href="/pinterest/home" class="text-black hover:text-gray-700"><i class="fa-solid fa-house text-xl"></i></a>
        <a href="/settings" class="text-black hover:text-gray-700"><i class="fa-solid fa-compass text-xl"></i></a>
        <a href="/dashboard" class="text-black hover:text-gray-700"><i class="fa-solid fa-bell text-xl"></i></a>
        <a href="/profile" class="text-black hover:text-gray-700"><i class="fa-solid fa-circle-plus text-xl"></i></a>
        <a href="/settings" class="text-black hover:text-gray-700"><i class="fa-solid fa-comments text-xl"></i></a>
      </div>

      <!-- Bottom Icon -->
      <div class="flex items-center justify-center md:mb-4">
        <a href="#" class="text-black hover:text-gray-700"><i class="fa-solid fa-gear text-xl"></i></a>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="grid grid-rows-[350px_1fr] h-full overflow-hidden">

      <!-- Top Section -->
      <section class="sticky top-0 p-4 z-10 bg-white flex flex-col gap-10">
        <!-- Search Bar -->
        <div class="flex items-center mb-4">
          <div class="bg-gray-200 h-10 w-10 rounded-l-xl flex items-center justify-center">
            <i class="fa-solid fa-magnifying-glass"></i>
          </div>
          <input type="text" placeholder="Search Your Pins" class="bg-gray-200 text-gray-700 h-10 w-full rounded-r-xl px-3 text-sm md:text-base outline-none">
        </div>

        <!-- Header Section -->
        <div class="flex flex-col  md:flex-row items-center justify-center   gap-4 px-2  h-4/5">
          <!-- Profile Info -->
         
            <div class="text-sm md:text-base  h-full w-1/2 flex items-center justify-center flex-col gap-3">
              
            <div class="h-20 bg-red-200 w-20 rounded-full border-2 border-black "> 
            <img class="w-full bg-cover"  src="<%user.profileImage%> " alt="">  
            </div> 
              <div class="font-bold text-3xl">
                <%= user.name %>
              </div>
              <div class="font-bold text-base">
                <%= user.email %>
              </div>
           
          <!-- Tabs -->
          <div class="flex gap-4">
            <button id="boardsTab" class="py-2 px-3 text-black border-b-2 border-black font-semibold">Boards</button>
            <button id="pinsTab" class="py-2 px-3 text-black border-b-2 border-transparent hover:border-black hover:text-gray-700 font-semibold">Pins</button>
          </div>
        </div>
      </section>

      <!-- Scrollable Content -->
      <section class="overflow-y-auto p-4">
        <!-- Boards Content -->
        <!-- Boards Content -->
<div id="boardsContent" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-6 gap-4">
  <% if (boards && boards.length > 0) { %>
    <% boards.forEach(board => { %>
      <a href="/pinterest/boards/<%= board._id %>" class="bg-white shadow rounded overflow-hidden hover:shadow-md transition duration-200">
        <div class="h-auto  flex items-center justify-center bg-gray-100">
          <% if (board.image?.url) { %>
            <img src="<%= board.image.url %>" alt="<%= board.name %>" class="w-full h-full object-cover"/>
          <% } else { %>
            <span class="text-gray-500 font-semibold"><%= board.name %></span>
          <% } %>
        </div>
        <div class="p-2 text-center text-sm font-medium text-gray-800">
          <%= board.name %>
        </div>
      </a>
    <% }) %>
  <% } else { %>
    <p class="text-gray-500 col-span-full text-center italic">You haven't created any boards yet.</p>
  <% } %>
</div>

        <!-- Pins Content -->
       <!-- Pinterest Masonry Layout -->
<section class="p-4 bg-white min-h-screen">
  <div id="pinsContent" class="columns-2 sm:columns-3 md:columns-4 xl:columns-5 gap-4 hidden">
    <% if (pins && pins.length > 0) { %>
      <% pins.forEach(pin => { %>
        <div class="mb-4 break-inside-avoid overflow-hidden rounded-lg shadow bg-white">
          <img src="<%= pin.image.url %>" alt="<%= pin.title %>" class="w-full object-contain" loading="lazy" />
          <div class="p-2">
            <h3 class="text-sm font-semibold"><%= pin.title %></h3>
            <% if (pin.description) { %>
              <p class="text-xs text-gray-600"><%= pin.description %></p>
            <% } %>
            <p class="text-[10px] text-gray-400 mt-1">Category: <%= pin.category %></p>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-span-full text-center text-gray-500">No pins to show.</div>
    <% } %>
  </div>
</section>


      </section>
    </main>
  </div>


  <script src="/scripts.js/profile.js"></script>
</body>
</html>