<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>SAVED - PINTEREST</title>
<link rel="stylesheet" href="/css/style.css">
</head>
<body class="m-0 p-0 box-border">

  <div class="grid md:grid-cols-[80px_1fr] grid-cols-1 min-h-screen">


    <!-- Sidebar -->
    <aside class="fixed md:static bottom-0 left-0 z-10 w-full md:w-20 h-16  md:h-full bg-white border-t-2 md:border-t-0 md:border-r-2 border-gray-200 flex md:flex-col flex-row justify-between items-center md:items-stretch p-2 gap-4 md:gap-20">
      <div class="flex md:flex-col flex-row gap-4 items-center justify-evenly md:h-2/3 w-full  ">
        <a href="/pinterest/home">
          <div class="w-10 h-10 overflow-hidden">
            <img src="/images/pinterestlogo.jpg" alt="Pinterest Logo" class="p-1 w-full h-full object-cover rounded" />
          </div>
        </a>
        <a href="/pinterest/home" class=  "text-black hover:text-gray-600"><i class="fa-solid fa-house text-xl" title="Home"></i></a>
        <a href="/pinterest/profile" class= "text-black hover:text-gray-600"><i class="fa-solid fa-user text-xl" title="profile"></i></a>
        <a href="/pinterest/pin/saved" class="text-black hover:text-gray-600"><i class="fa-solid fa-bookmark text-xl" title="Saved"></i> </a>
        <a href="/pinterest/pin" class=  "text-black hover:text-gray-600"><i class="fa-solid fa-circle-plus text-xl" title="Create"></i></a>
         </div>
      <div class="hidden md:flex items-center justify-center md:mb-4 ">
  <!-- Settings Icon Button -->
  <button id="settingsBtn" class="p-2 hover:bg-gray-100 rounded-full focus:outline-none">
    <i class="fas fa-cog text-xl"></i>
  </button>

  <!-- Dropdown Menu (Initially Hidden) -->
  <div id="settingsMenu" class="hidden absolute right-0 mt-2 w-40 bg-white border rounded-lg shadow-lg z-50 ">
   <a href="/pinterest/profile" class="block px-4 py-2 hover:bg-gray-100">Profile</a>
    <form action="/pinterest/logout" method="POST">
      <button type="submit" class="w-full text-left px-4 py-2 hover:bg-gray-100">Logout</button>
    </form>
</div>

      </div>
    </aside>

    <!-- Main Content -->
    <main class="grid grid-rows-[300px_1fr] h-full overflow-hidden ">

      <!-- Top Section -->
      <section class="sticky top-0  p-4 z-0 ">
        <!-- Search Bar -->
        <div class="flex items-center mb-4 ">
          <!-- Search bar takes all space except buttons -->
<div class="flex items-center flex-1">
  <form action="/pinterest/pin/search" method="post" class="flex w-full">
    <!-- Search icon -->
    <div class="bg-gray-200 h-10 w-10 rounded-l-xl flex items-center justify-center">
      <i class="fa-solid fa-magnifying-glass text-gray-600"></i>
    </div>

    <!-- Search input -->
    <input
      type="text"
      name="query"
      placeholder="Search Your Pins"
      class="bg-gray-200 text-gray-800 h-10 w-full rounded-r-xl px-3 text-sm md:text-base outline-none"
    />

    <!-- Optional submit button (hidden for icon-based search) -->
    <input type="submit" value="Search" class="hidden" />
  </form>
</div>  </div>

        <!-- Header & Tabs -->
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 md:gap-0 px-2 ">
          <div>
            <h1 class="text-2xl md:text-4xl font-bold">YOUR SAVED IDEAS</h1>
            <div class="flex gap-4 mt-2">
              <button id="boardsTab" class="py-2 px-3 text-black border-b-2 border-black font-semibold">Boards</button>
              <button id="pinsTab" class="py-2 px-3 text-black border-b-2 border-transparent hover:border-black hover:text-gray-700 font-semibold">Pins</button>
            </div>
          </div>

          <!-- Profile Info -->
          <div class="flex items-center gap-3 mt-2 md:mt-0">
         
             <div class="h-14 w-14 rounded-full border-2 border-black overflow-hidden">
    <img class="w-full h-full object-cover" src="<%= user.profileImage.url %>" alt="Profile Image">
  </div> 

            <div class="text-sm md:text-base">
              <div class="font-bold"><%=user.name%></div>
          
            </div>
            <a href="/pinterest/profile">
            <button class="bg-gray-300 h-10 px-4 rounded-2xl text-sm">View Profile</button>
            </a>
          </div>
        </div>
      </section>

      <!-- Scrollable Content -->
      <section class="overflow-y-auto p-4">
      <div id="boardsContent" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-6 gap-4">
  <% if (boards && boards.length > 0) { %>
    <% boards.forEach(board => { %>
      <a href="/pinterest/boards/<%= board._id %>" class="bg-white shadow rounded overflow-hidden hover:shadow-md transition duration-200">
        <div class="h-auto  flex items-center justify-center bg-gray-100">
          <% if (board.image?.url) { %>
            <img src="<%= board.image.url %>" alt="<%= board.name %>" class="w-full h-full object-cover"/>
          <% } else { %>
            <span class="text-gray-500 font-semibold"><%= board.name %></span>
          <% } %>
        </div>
        <div class="p-2 text-center text-sm font-medium text-gray-800">
          <%= board.name %>
        </div>
      </a>
    <% }) %>
  <% } else { %>
    <p class="text-black col-span-full text-center">You haven't created any boards yet.</p>
  <% } %>
</div>

        <!-- Pins Content -->
        <div id="pinsContent" class="hidden">
          <% if (!savedPosts || savedPosts.length === 0) { %>
            <div class="p-4 bg-white rounded text-center">
              <p class="text-base">You haven't saved any pins yet.</p>
              <a href="/" class="mt-3 inline-block text-sm underline ">Browse Pins</a>
            </div>
          <% } else { %>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-6 gap-4 mt-4 auto-rows-fr">
              <% savedPosts.forEach(function(saved) { %>
                <div class="bg-white rounded overflow-hidden ">
                  <a href="/pinterest/pin/details/<%= saved._id %>" class="block relative">
                    <!-- If your saved.image is a Cloudinary url you can add transformations for thumbnails -->
                    <img
                      src="<%= saved.image.url %>"
                      alt="<%= saved.title || 'Pin image' %>"
                      class="w-full h-auto object-contain transition-transform duration-200 transform group-hover:scale-105"
                      loading="lazy"
                    />
                  </a>

                  <div class="p-2">
                    <h3 class="text-sm font-medium truncate"><%= saved.title %></h3>

                    <div class="mt-2 flex items-center justify-between">
                      <div class="flex items-center space-x-2">
                        <img src="<%= saved.createdBy?.profileImage || '/images/default.jpg' %>" alt="owner" class="w-7 h-7 rounded-full object-cover" />
                        <span class="text-xs"><%= saved.owner?.username %></span>
                      </div>

                      <!-- Remove saved button -->
                      <form action="/pinterest/pin/<%= saved._id %>/unsave" method="POST" class="ml-2">
                        <button type="submit" class="text-xs px-2 py-1 border rounded hover:bg-gray-100">Remove</button>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
       
      </section>
    </main>
  </div>

 <script src="/scripts.js/profile.js"></script>
</body>
</html>
