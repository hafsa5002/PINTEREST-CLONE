<!DOCTYPE html>
<html lang="en" class="m-0 p-0">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/style.css" />
  <title>Overlay Centered</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="m-0 p-0 overflow-hidden min-h-screen">

  <!-- Main full-screen container -->
  <div class="h-screen w-screen bg-gray-300 relative">
    
    <!-- Navbar -->
    <div class="flex flex-wrap items-center justify-between shadow-sm bg-white w-full px-5">
      <!-- Logo & Explore -->
      <div class="w-full md:w-auto flex items-center justify-between md:justify-start gap-4 mb-4 md:mb-0">
        <div class="w-12 h-12 sm:w-16 sm:h-16 overflow-hidden p-1">
          <img src="/images/pinterestlogo.jpg" alt="Pinterest Logo" class="w-full h-full object-contain bg-white p-1 rounded" />
        </div>
        <a href="#" class="text-base sm:text-lg font-semibold text-gray-800 hover:text-red-600 transition">Explore</a>
      </div>
      
      <!-- Nav Links -->
      <div class="w-full md:flex-1 flex flex-wrap md:flex-nowrap justify-center md:justify-end gap-4 text-sm font-medium text-gray-500">
        <a href="#" class="hover:text-red-500 transition">About</a>
        <a href="#" class="hover:text-red-500 transition">Business</a>
        <a href="#" class="hover:text-red-500 transition">Create</a>
        <a href="#" class="hover:text-red-500 transition">News</a>
      </div>

      <!-- Auth Buttons -->
      <div class="w-full md:w-auto flex gap-2 justify-center md:justify-end mt-4 md:mt-0">
        <a href="#" class="bg-red-600 hover:bg-red-700 text-white px-5 py-2 rounded-xl text-sm font-medium transition ml-3">Log In</a>
        <a href="#" class="bg-gray-200 hover:bg-gray-300 text-black px-5 py-2 rounded-xl text-sm font-medium transition">Sign Up</a>
      </div>
    </div>
    
    <!-- Dimming background -->
    <div class="fixed inset-0 bg-black bg-opacity-50 z-20"></div>

    <!-- Centered Overlay -->
    <div class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 
                h-full w-full sm:w-4/5 md:w-3/5 lg:w-1/2 xl:w-1/3 bg-white z-30 shadow-lg 
                flex flex-col items-center justify-center rounded-xl p-4 sm:p-6">

      <!-- Logo Section -->
      <div class="flex flex-col items-center gap-2 py-4 border-b border-gray-200 w-full">
        <div class="w-12 h-12 sm:w-16 sm:h-16 overflow-hidden">
          <img src="/images/pinterestlogo.jpg" alt="Pinterest Logo" class="w-full h-full object-contain p-1 rounded" />
        </div>
        <h2 class="text-xl sm:text-2xl font-bold text-gray-800 text-center">WELCOME TO PINTEREST</h2>
        <h3 class="text-sm sm:text-base text-gray-600 text-center">Find new ideas to try</h3>
      </div>

      <!-- Form Section -->
      <form action="/user/register" method="post" class="w-full mt-6 flex flex-col gap-4">
           <div>
          <label class="block text-gray-700 font-medium mb-1">NAME:</label>
          <input type="text" name='name' placeholder="Name" class="w-full h-12 px-4 rounded-2xl border border-black focus:outline-none focus:ring-2 focus:ring-blue-400" />
        </div>

   <div>
          <label class="block text-gray-700 font-medium mb-1">Username:</label>
          <input type="text" placeholder="Username" name="username" class="w-full h-12 px-4 rounded-2xl border border-black focus:outline-none focus:ring-2 focus:ring-blue-400" />
        </div>

        <div>
          <label class="block text-gray-700 font-medium mb-1">Email:</label>
          <input type="email" placeholder="Email" name="email" class="w-full h-12 px-4 rounded-2xl border border-black focus:outline-none focus:ring-2 focus:ring-blue-400" />
        </div>

        <div>
          <label class="block text-gray-700 font-medium mb-1">Password:</label>
          <input type="password" placeholder="Password" name="password" class="w-full h-12 px-4 rounded-2xl border border-black focus:outline-none focus:ring-2 focus:ring-blue-400" />
        </div>

        <button type="submit" class="h-12 w-full mt-4 bg-red-500 text-white font-semibold rounded-2xl hover:bg-red-600 transition">
          SIGN UP
        </button>
      </form>
    </div>

  </div>

</body>
</html>
